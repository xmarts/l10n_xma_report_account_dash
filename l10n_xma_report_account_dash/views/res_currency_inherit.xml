<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="report_account_modline_tree" model="ir.ui.view">
            <field name="name">report.account.modline.tree</field>
            <field name="model">report.account.modline</field>
                <field name="arch" type="xml">
                    <tree string="Lineas de Detalles" delete="0" create="0" edit="0">
                        <field name="move_id" invisible="0"/>
                        <!--field name="timeline_help_id" invisible="1"/>
                        <field name="stage_id" invisible="0"/>
                        <field name="users_id" invisible="0"/>
                        <field name="create_uid" invisible="0"/>
                        <field name="write_date"/>
                        <field name="team_id" invisible="0"/>
                        <field name="dpi" invisible="0"/>
                        <field name="telefono" invisible="0"/>
                        <field name="telefono2" invisible="0"/>
                        <field name="forma_pago" invisible="0"/>
                        <field name="monto" invisible="0"/>
                        <field name="dir_despacho" invisible="0"/>
                        <field name="quien_recibe" invisible="0"/>
                        <field name="observaciones" invisible="0"/>
                        <field name="asignado" invisible="0"/>
                        <field name="fecha_entrega" invisible="0"/-->
                    </tree>
                </field>
        </record>

        <record id="report_account_mod_view_form" model="ir.ui.view">
            <field name="name">report.account.mod.view.form</field>
            <field name="model">report.account.mod</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="desde" required="1"/>
                            <field name="hasta" required="1"/>
                            <button string="Generar" name="open_view_detail_helptime" type="object" class="oe_highlight"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="act_tree_timeline" model="ir.actions.act_window">
            <field name="name">custom report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.account.mod</field>
            <field name="view_mode">form</field>
        </record>

        <record id="test_wizard_action" model="ir.actions.act_window">
            <field name="name">custom report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.account.mod</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="report_account_mod_view_form"/>
            <field name="target">new</field>
        </record>

        <menuitem
                id="action_open_report_tree_timeline"
                parent="account.menu_finance_reports"
                action="test_wizard_action"
                name="custom report"
                sequence="95"
        />

    </data>
</odoo>